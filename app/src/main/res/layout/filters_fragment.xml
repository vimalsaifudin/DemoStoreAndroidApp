<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.filters.FiltersFragment">

    <ScrollView android:id="@+id/scrollbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.5"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_filters"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    app:textAllCaps="true"
                    android:textColor="@color/gen_black"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Price Range"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/gen_black" />

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="18dp"
                    android:layout_alignParentLeft="true"
                    >

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:id="@+id/textMin1"
                    android:textColor="@color/gen_black" />

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:id="@+id/textMax1"
                    android:textColor="@color/gen_black"
                    android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                    android:id="@+id/rangeSeekBar"
                    android:layout_marginTop="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:corner_radius="5"
                    app:min_value="0"
                    app:max_value="45000"
                    app:min_start_value="5000"
                    app:max_start_value="40000"
                    app:bar_color="#8a8a8f"
                    app:bar_highlight_color="#8a8a8f"
                    />


                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Color"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/gen_black" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:orientation="horizontal" >


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical" >
                    <Button
                        android:id="@+id/button1"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cirlce_01" />

                        <TextView android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:id="@+id/textColor1"
                            android:text="Black"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"
                            android:textColor="@color/gen_black"
                            android:gravity="center_horizontal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical" >

                    <Button
                        android:id="@+id/button2"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cirlce_02" />

                        <TextView android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:id="@+id/textColor2"
                            android:text="Hazelnut"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"
                            android:textColor="@color/gen_black"
                            android:gravity="center_horizontal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical" >

                    <Button
                        android:id="@+id/button3"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cirlce_03" />

                        <TextView android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:id="@+id/textColor3"
                            android:text="Pink"
                            android:textAlignment="center"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/gen_black"
                            android:gravity="center_horizontal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical" >

                    <Button
                        android:id="@+id/button4"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cirlce_04" />

                        <TextView android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:id="@+id/textColor4"
                            android:text="Yellow"
                            android:textAlignment="center"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/gen_black"
                            android:gravity="center_horizontal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical" >

                    <Button
                        android:id="@+id/button5"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cirlce_05" />

                        <TextView android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:id="@+id/textColor5"
                            android:layout_marginTop="10dp"
                            android:text="Green"
                            android:textAlignment="center"
                            android:textColor="@color/gen_black"
                            android:gravity="center_horizontal" />

                    </LinearLayout>


                </LinearLayout>





                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Sizes"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/gen_black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:orientation="horizontal" >

                <Button
                    android:id="@+id/buttonXS"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XS"
                    android:textSize="20dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#8a8a8f"
                    android:background="@drawable/cirlce_grey" />

                    <Button
                        android:id="@+id/buttonS"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S"
                        android:textColor="#8a8a8f"
                        android:textSize="20dp"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/cirlce_grey" />

                    <Button
                        android:id="@+id/buttonM"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M"
                        android:textColor="#8a8a8f"
                        android:textSize="20dp"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/cirlce_grey" />

                    <Button
                        android:id="@+id/buttonL"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:textSize="20dp"
                        android:text="L"
                        android:textColor="#8a8a8f"
                        android:background="@drawable/cirlce_grey" />

                    <Button
                        android:id="@+id/buttonXL"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:textSize="20dp"
                        android:text="XL"
                        android:textColor="#8a8a8f"
                        android:background="@drawable/cirlce_grey" />

                    <Button
                        android:id="@+id/button2XL"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:textSize="20dp"
                        android:text="2XL"
                        android:textColor="#8a8a8f"
                        android:background="@drawable/cirlce_grey" />

                    <Button
                        android:id="@+id/button3XL"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:textSize="20dp"
                        android:text="3XL"
                        android:textColor="#8a8a8f"
                        android:background="@drawable/cirlce_grey" />

                </LinearLayout>


                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Brands"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/gen_black" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:textAlignment="textStart"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    tools:ignore="MissingConstraints"
                    android:gravity="start">

                    <androidx.constraintlayout.helper.widget.Flow
                        android:id="@+id/flow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="textBrand1,textBrand2,textBrand3,textBrand4,textBrand5,textBrand6,textBrand7,textBrand8,textBrand9"
                        app:flow_verticalGap="10dp"
                        app:flow_horizontalGap="10dp"
                        app:flow_horizontalBias="0"
                        app:flow_horizontalStyle="packed"
                        app:flow_wrapMode="chain"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <Button
                        android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:id="@+id/textBrand1"
                    android:textColor="#fff"
                    android:text="EZRAH"
                        android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:background="@drawable/textview_background_black"
                    android:layout_alignParentRight="true"
                        />

                    <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:id="@+id/textBrand2"
                    android:textColor="#000"
                    android:text="UNDRESS CODE"
                    android:padding="10dp"
                    android:background="@drawable/textview_background_grey"
                    android:layout_alignParentRight="true"
                        />

                    <Button android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:id="@+id/textBrand3"
                        android:textColor="#000"
                        android:text="VARDELONI"
                        android:padding="10dp"
                        android:background="@drawable/textview_background_grey"
                        android:layout_alignParentRight="true"
                        />

                    <Button android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:id="@+id/textBrand4"
                        android:textColor="#000"
                        android:text="CHER"
                        android:padding="10dp"
                        android:background="@drawable/textview_background_grey"
                        android:layout_alignParentRight="true"
                        />


                    <Button android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:id="@+id/textBrand5"
                        android:textColor="#000"
                        android:text="BELIZA"
                        android:padding="10dp"
                        android:background="@drawable/textview_background_grey"
                        android:layout_alignParentRight="true"
                        />


                    <Button android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:id="@+id/textBrand6"
                        android:textColor="#000"
                        android:text="NAAMA and ANAT"
                        android:padding="10dp"
                        android:background="@drawable/textview_background_grey"
                        android:layout_alignParentRight="true"
                        />

                    <Button android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:id="@+id/textBrand7"
                        android:textColor="#000"
                        android:text="CHIC N' ROLLA"
                        android:padding="10dp"
                        android:background="@drawable/textview_background_grey"
                        android:layout_alignParentRight="true"
                        />


                    <Button android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:id="@+id/textBrand8"
                        android:textColor="#fff"
                        android:text="Martewall Buenos Aires"
                        android:padding="10dp"
                        android:background="@drawable/textview_background_black"
                        android:layout_alignParentRight="true"
                        />

                    <Button android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:id="@+id/textBrand9"
                        android:textColor="#000"
                        android:text="Khongboon AW"
                        android:padding="10dp"
                        android:background="@drawable/textview_background_grey"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        />




                </androidx.constraintlayout.widget.ConstraintLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="34dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btnClear"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clear"
                        android:textSize="20dp"
                        android:width="100dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#000000"
                        android:background="@drawable/button_bg_white" />

                    <Button
                        android:id="@+id/btnApply"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apply"
                        android:textSize="20dp"
                        android:width="100dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#ffffff"
                        android:background="@drawable/button_bg_black" />

                </LinearLayout>




        </LinearLayout>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>